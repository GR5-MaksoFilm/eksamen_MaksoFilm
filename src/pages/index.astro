---
import MainLayout from "../layouts/MainLayout.astro";
import ButtonBack from "../components/ButtonBack.astro";
import ButtonPortfolio from "../components/ButtonPortfolio.astro";
import Hero from "../components/Hero.astro";
import InstagramFeed from "../components/InstagramFeed.astro";
---

<MainLayout>
  <h1>MAKSOFILM</h1>
  <h3>Din professionelle videopartner</h3>
  <Hero />
  <div class="portfolio-underline"></div>

  <h2 class="section-title">HVEM ER MAKSOFILM?</h2>
  <div class="grid_1_1">
    <div class="left-column">
      <div class="billede">
        <img
          class="profilbillede"
          src="src/assets/img/profilbillede.webp"
          alt="Profilbillede"
        />
      </div>
    </div>
    <div class="right-column">
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
        veniam.
      </p>
      <ButtonPortfolio tekst="Se mit Portfolio" url="" />
    </div>
  </div>

  <div class="portfolio-underline"></div>
  <h2>MaksoFilm løser opgaven</h2>
  <p class="thin">
    Et samarbejde med MaksoFilm betyder en professionel videoproduktion og
    redigering. Vi samskaber og jeg kan sparre på og løse dine tanker. Lad os
    bringe dine ideer til live!
  </p>
  <div class="portfolio-underline3"></div>
  <InstagramFeed />
</MainLayout>

<style>
  h1 {
    margin-top: 2rem;
    text-align: center;
  }

  h3 {
    text-align: center;
    margin-bottom: 2rem;
  }

  h2 {
    margin-bottom: 1rem;
  }

  .section-title {
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .thin {
    font-family: manrope;
    font-weight: 300;
  }

  .portfolio-underline {
    align-self: center;
    height: 2px;
    background-color: white;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .grid_1_1 {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .left-column,
  .right-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .profilbillede {
    width: 100%;
    height: auto;
    border: 3px solid var(--primary-color);
    border-radius: 3px;
  }

  .portfolio-underline3 {
    align-self: center;
    height: 2px;
    background-color: white;
    margin-top: 2rem;
    margin-bottom: 1rem;
    margin-bottom: 6rem;
  }

  @media (min-width: 768px) {
    .grid_1_1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: start;
      margin-left: 4rem;
      margin-right: 4rem;
    }
    h2 {
      margin-left: 4rem;
    }

    .section-title,
    .portfolio-underline,
    .thin {
      margin-left: 4rem;
      margin-right: 4rem;
    }
    .portfolio-underline3 {
      margin-left: 4rem;
      margin-right: 4rem;
    }
  }
</style>
