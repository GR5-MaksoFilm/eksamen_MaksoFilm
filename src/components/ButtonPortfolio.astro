---
const { tekst, url } = Astro.props;
---

<a href=`${url}`>
  <button>{tekst}</button>
</a>

<style>
  a {
    text-decoration: none;
    display: flex;
    justify-content: center;
    margin: 2rem auto; /* centers and adds spacing */
  }

  button {
    background-color: var(--secondary-color);
    font-family: manrope;
    font-weight: bold;
    color: var(--primary-color);
    font-size: 1.8rem;
    padding: 0.5rem 2.2rem;
    border-radius: 0.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: 0.3s;
    transition: background-color 0.2s ease;
  }
  button:hover {
    scale: 1.05;
    background-color: rgba(147, 125, 166, 1);
  }

  @media (min-width: 768px) {
  }
</style>
