---
const { tekst, url } = Astro.props;
---

<a href=`${url}`>
  <p>{tekst}</p>
</a>

<style>
  a {
    text-decoration: none;
    background-color: var(--secondary-color);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%; /* Fylder hele bredden p√• mobil */
    margin: 10px auto;
    padding: 0;
    transition: 0.3s;
  }

  a:hover {
    scale: 1.05;
    background-color: rgba(147, 125, 166, 1);
  }

  p {
    margin: 2px;
    font-family: "Manrope";
    border-radius: 5px;
    width: 100%;
    padding: 6px 24px;
    font-size: 20px;
    text-align: center;
    transition: 0.3s;
  }

  @media (min-width: 768px) {
    a {
      width: fit-content;
    }

    p {
      font-size: 16px;
      padding: 4px 16px;
    }
  }
</style>
