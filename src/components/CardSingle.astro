---
//@ts-nocheck
const { project } = Astro.props;
---

<div class="info-container">
  <div class="portfolio-center">
    <h1 class="portfolio-title">{project.project_title}</h1>
  </div>
  <h2>{project.project_category}</h2>
  <h3>{project.project_h3}</h3>
  <p>
    {
      project.project_description.split("\n").map((line, index) => (
        <>
          {line}
          <br />
        </>
      ))
    }
  </p>
  <div class="watch-button-wrapper">
    <a
      href={project.project_watch}
      target="_blank"
      rel="noopener noreferrer"
      class="watch-button"
    >
      Se projektet her
    </a>
  </div>

  <img
    class="project-image"
    src={project.project_photo}
    alt={project.project_title}
  />
</div>

<style>
  .portfolio-center {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .portfolio-title {
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .portfolio-title::after {
    content: "";
    display: block;
    height: 2px;
    background-color: white;
    margin-top: 0.5rem;
    width: 120%;
    transform: translateX(-9%);
  }

  h3 {
    font-size: 1.8rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .watch-button-wrapper {
    text-align: center;
    margin-top: 3rem;
    margin-bottom: 3rem;
  }

  .watch-button {
    font-size: 2rem;
    font-family: manrope;
    position: relative; /* Needed for the ::after to position correctly */
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
    padding-bottom: 2px;
    transition: color 0.2s ease;
  }

  .watch-button::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--primary-color);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .watch-button:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .project-image {
    border: 3px solid var(--primary-color);
    border-radius: 3px;
    max-width: 100%;
    margin-top: 1.5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 5rem;
  }
</style>
