---
//@ts-nocheck
const { project } = Astro.props;
---

<div class="info-container">
  <div class="portfolio-center">
    <h1 class="portfolio-title">{project.project_title}</h1>
  </div>
  <div class="portfolio-underline"></div>

  <h2>{project.project_category}</h2>
  <h3>{project.project_h3}</h3>

  <p>
    {
      project.project_description.split("\n").map((line, index) => (
        <>
          {line}
          <br />
        </>
      ))
    }
  </p>

  <div class="watch-button-wrapper">
    <a
      href={project.project_watch}
      target="_blank"
      rel="noopener noreferrer"
      class="watch-button"
    >
      Se projektet her
    </a>
  </div>
  <div class="image-wrapper">
    <img
      class="project-image"
      src={project.project_photo}
      alt={project.project_title}
    />
    <img
      class="glow-background"
      src="/src/assets/img/glow.png"
      alt=""
      aria-hidden="true"
    />
  </div>
</div>

<style>
  .info-container {
    padding: 0 1rem;
  }

  .portfolio-center {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .portfolio-title {
    margin-bottom: 0.5rem;
    font-size: 3rem;
    text-align: center;
  }

  .portfolio-underline {
    align-self: center;
    height: 2px;
    background-color: white;
    width: 100%;
    margin-bottom: 2rem;
  }

  h3 {
    font-size: 1.8rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .watch-button-wrapper {
    text-align: center;
    margin-top: 3rem;
    margin-bottom: 5rem;
  }

  .watch-button {
    font-size: 1.8rem;
    font-family: manrope;
    position: relative;
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
    padding-bottom: 2px;
    transition: color 0.2s ease;
  }

  .watch-button::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--primary-color);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .watch-button:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1.5rem;
    margin-bottom: 6rem;
    max-width: 500px; /* default mobile size */
    margin-left: auto;
    margin-right: auto;
  }

  .glow-background {
    position: absolute;
    width: 140%; /* slightly larger than main image */
    transform: rotate(2.5deg);
    z-index: 0;
    pointer-events: none;
    opacity: 0.9; /* adjust for subtlety */
  }

  .project-image {
    width: 100%;
    border: 3px solid var(--primary-color);
    border-radius: 3px;
    z-index: 1;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  @media (min-width: 768px) {
    .info-container {
      margin-left: 4rem;
      margin-right: 4rem;
    }

    .portfolio-underline {
      margin: 0 auto 2rem auto;
    }

    .image-wrapper {
      min-width: 60%;
      margin-bottom: 7rem;
    }
  }
</style>
