---
const { project } = Astro.props;
---

<div class="info-container">
  <h1>{project.project_title}</h1>
  <h2>{project.project_category}</h2>
  <h3>{project.project_h3}</h3>
  <p>{project.project_description}</p>
  <a
    href={project.project_watch}
    target="_blank"
    rel="noopener noreferrer"
    class="watch-button"
  >
    Se projektet her
  </a>

  <img
    class="project-image"
    src={project.project_photo}
    alt={project.project_title}
  />
</div>

<style>
  h3 {
    font-size: 2rem;
    font-weight: 300;
  }

  .watch-button {
    font-size: 2rem;
    font-family: manrope;
    position: relative; /* Needed for the ::after to position correctly */
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
    padding-bottom: 2px;
    transition: color 0.2s ease;
  }

  .watch-button::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--primary-color);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .watch-button:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .project-image {
    border: 3px solid var(--primary-color); /* âœ… Add your border color */
    border-radius: 3px; /* Optional: rounded corners */
    max-width: 100%; /* Optional: makes it responsive */
    margin-top: 1.5rem; /* Optional: spacing from the button */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: subtle glow/shadow */
  }
</style>
