---
import { Image } from "astro:assets";
import Glow from "../assets/img/glow.png";
---

<div class="hero">
  <Image src={Glow} class="underlay" alt="Glow effect" />
  <iframe
    class="video"
    title="vimeo-player"
    src="https://player.vimeo.com/video/419927692?h=94d7a56c67"
    allow="autoplay; fullscreen"
    allowfullscreen
    frameborder="0"
  >
  </iframe>
</div>

<style>
  .hero {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1.5rem;
    margin-bottom: 6rem;
    margin-left: auto;
    margin-right: auto;
    aspect-ratio: 12 / 9;
  }
  .video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    border: 0;
  }

  .underlay {
    position: absolute;
    width: 130%; /* slightly larger than main image */
    transform: rotate(2.5deg);
    z-index: 0;
    pointer-events: none;
    opacity: 0.9;
  }

  main {
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
