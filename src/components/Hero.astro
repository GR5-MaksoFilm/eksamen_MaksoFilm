---
import {Image} from 'astro:assets';
import Glow from '../assets/img/glow_rect.png';
---

<div class="hero">
    <Image src={Glow} class="underlay" alt="Glow effect"/>
  <iframe
    class="video"
    title="vimeo-player"
    src="https://player.vimeo.com/video/419927692?h=94d7a56c67"
    allow="autoplay; fullscreen"
    allowfullscreen
    frameborder="0"
  >
  </iframe>
</div>

<style>
  .hero {
    position: relative;
    width: 100%;
    aspect-ratio: 12 / 9;
  }
  .video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    border: 0;
  }

  .underlay {
        position: absolute;
    top: 0;
    left: 0;
    width: 105%;
    transform: translate(-2%, -4%);
    z-index: 0;
    pointer-events: none;
    filter: blur(8px);
    rotate: 4deg;
    
  }

  main{overflow: hidden;}

  @media (min-width: 768px) {
    .hero {
      max-width: 800px; /* fx max bredde for desktop */
      margin: 0 auto;
    }
  }
</style>
