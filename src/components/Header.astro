---
import Logo from '../assets/MaksoFilm_logo.svg';

---

<nav>
    <div class="spacer"></div>
    <ul id="menu_1">
        <li class="fill-animation"><a href="" class="underline-animation">Om</a></li>
        <li class="fill-animation"><a href="" class="underline-animation">Portfolio</a></li>
    </ul>
        <a href="index.astro"><Logo class="logo"/></a>
    <ul id="menu_2">
        <li class="fill-animation"><a href="" class="underline-animation">Services</a></li>
        <li class="fill-animation"><a href="" class="underline-animation">Kontakt</a></li>
    </ul>
<div id="burger">
<span class="line"></span>
<span class="line"></span>
<span class="line"></span>    
</div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding: 1rem;
        margin-inline: auto;
        gap: 2rem;
        
    }
    ul {
        display: flex;
        justify-content: space-evenly;
        width: 33cqw;
        transform-origin: 0% 0%;
    }
    .logo {
        width: 50vw;
        max-width: 284px;
        height: auto;
    }
    li {
        list-style: none;
    }
    
    nav>ul>li>a{
    color: var(--primary-color);
    font-family: "Manrope", sans-serif;
    font-weight: 600;
    text-decoration:none ;
    font-size: 1.5rem;

    display: inline-block;
    position: relative;
    }
    
.underline-animation:after {
  content: '';
  position: absolute;
  width: 100%;
  transform: scaleX(0);
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: var(--primary-color);
  transform-origin: bottom center;
  transition: transform 0.25s ease-out;
}

.underline-animation:hover:after {
  transform: scaleX(1);
  transform-origin: bottom center;
}

#burger{
    width: 30px;
    height: 30px;
    border-radius: 5px;
    align-content: center;
    cursor: pointer;
}

.spacer{
    width: 30px;
    height: 30px;
}
    span{
        display: block;
        position: relative;
        background-color: var(--primary-color);
        width: 100%;
        height: 4px;
        border-radius: 3px;
        margin-bottom: 5px;
        z-index: 1;
        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                  opacity 0.55s ease;
    }

    #burger, .spacer{
        display: none;
    }


@media screen and (max-width: 975px) {
  #menu_1, #menu_2{
    display: none;}

  #burger, .spacer{
    display: block;
  }

  nav{
    justify-content: space-between;
  }

nav>#burger.active span:nth-child(1){
    transform: rotate(45deg) translate(0, -1px);
}

nav>#burger span:nth-child(1){
    transform-origin: 0% 0%;
}
nav>#burger.active span:nth-child(2){
    opacity: 0;
    transition: opacity 0.25s ease;

}

nav>#burger span:nth-child(2){
    opacity: 1;
    transition: opacity 0.55s ease-in;
}

nav>#burger.active span:nth-child(3){
    transform: rotate(-45deg) translate(0, 1px);
}
nav>#burger span:nth-child(3){
    transform-origin: 0% 100%;
}

 nav.active #menu_1{
    display: block;
    position: absolute;
    background-color: var(--primary-color);
    top: 94px;
    right: 1rem;
    width: 20%;
    box-shadow: 0 10px 10px var(--secondary-color);
    z-index: 1;
    text-align: right;
}
nav.active #menu_2{
    display: block;
    position: absolute;
    background-color: var(--primary-color);
    top: 159px;
    right: 1rem;    
    width: 20%;
    box-shadow: 0 10px 10px var(--secondary-color);
    z-index: 1;
     text-align: right;
}
#menu_1 a, #menu_2 a{
    color: var(--background-color);
    margin-right: 10px;
    font-size: 1.5rem;
}

.fill-animation:hover{
    animation-name: fill;
    animation-duration: 0.25s;
}
@keyframes fill {
    0% {
        background-color: var(--primary-color);
    }
    100% {
        background-color: var(--secondary-color);
    }
}

