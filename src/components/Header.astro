---
import Logo from "../assets/img/MaksoFilm_Logo.svg";
---

<nav>
  <ul class="menu first">
    <li class="fill-animation">
      <a href="/om" class="underline-animation">Om</a>
    </li>
    <li class="fill-animation">
      <a href="/portfolio" class="underline-animation"
        >Portfolio</a
      >
    </li>
  </ul>

  <a href="/"><Logo class="logo" /></a>

  <ul class="menu second">
    <li class="fill-animation">
      <a href="/services" class="underline-animation">Services</a>
    </li>
    <li class="fill-animation">
      <a href="/kontakt" class="underline-animation">Kontakt</a>
    </li>
  </ul>
  <div id="burger">
    <span></span>
    <span></span>
    <span></span>
  </div>
</nav>

<style>
  .logo {
    width: 50vw;
    max-width: 284px;
    height: auto;
  }
  .menu {
    display: flex;
    justify-content: space-evenly;
    width: 33cqw;
  }
  li {
    list-style: none;
  }

  nav > ul > li > a {
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
    font-size: 1.5rem;
    display: inline-block;
    position: relative;
  }

  nav {
    position: sticky;
    width: 100%;
    top: 0;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 16px;
    margin: 0 auto 32px;
    gap: 16px;
    background-image: linear-gradient(
      to bottom,
      var(--background-color) 85%,
      transparent
    );
    z-index: 10;
  }


  #burger {
    position: absolute;
    top: 30px;
    right: 30px;
    width: 30px;
    height: 30px;
    border-radius: 5px;
    align-content: center;
    cursor: pointer;
  }
  span {
    display: block;
    position: relative;
    background-color: var(--primary-color);
    width: 100%;
    height: 4px;
    border-radius: 3px;
    margin-bottom: 5px;
    z-index: 1;
    transition:
      transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1),
      opacity 0.55s ease;
  }

  nav > #burger.active span:nth-child(1) {
    transform: rotate(45deg) translate(0, -1px);
  }

  nav > #burger span:nth-child(1) {
    transform-origin: 0% 0%;
  }
  nav > #burger.active span:nth-child(2) {
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  nav > #burger span:nth-child(2) {
    opacity: 1;
    transition: opacity 0.55s ease-in;
  }

  nav > #burger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(0, 1px);
  }
  nav > #burger span:nth-child(3) {
    transform-origin: 0% 100%;
  }

  @media screen and (max-width: 975px) {
    nav.active .menu.first {
      display: block;
      position: absolute;
      background-color: var(--primary-color);
      top: 90px;
      right: 0;
      width: 100%;
      z-index: 1;
      text-align: center;
    }
    nav.active .menu.second {
      display: block;
      position: absolute;
      background-color: var(--primary-color);
      top: 165px;
      right: 0;
      width: 100%;
      z-index: 1;
      text-align: center;
    }
    nav.active .fill-animation > a {
      color: var(--background-color);
      font-size: 25px;
      display: block;
      width: 100%;
    }

    .menu.first li, .menu.second li {
       border-bottom: solid 2px var(--secondary-color);
    }

    .menu.first>li:first-child{
      border-top: solid 1px var(--secondary-color);
    }
    .menu.second>li:last-child{
      border-bottom: solid 1px var(--secondary-color);
    }

    .fill-animation {
      background: linear-gradient(
        90deg,
        var(--secondary-color) 50%,
        var(--primary-color) 50%
      );
      background-position: -100%;
      background-size: 200% 100%;
      transition: background-position 0.3s ease-in;
      animation-direction: alternate;
    }

    .fill-animation:hover {
      background-position: 0;
    }
    nav.active .fill-animation > a {
      color: transparent;
      background-image: linear-gradient(
        90deg,
        var(--primary-color) 50%,
        var(--background-color) 50%
      );
      background-position: -100%;
      background-size: 200% 100%;
      background-clip: text;
      -webkit-background-clip: text;
      transition: background-position 0.3s ease-in;
      animation-direction: alternate;
    }
    nav.active .fill-animation:hover > a {
      background-position: 0;
    }

    .menu {
      display: none;
    }

    #burger {
      display: block;
    }

     .underline-animation:after{
      display: none;
    }
  }

  @media screen and (min-width: 975px) {
    .underline-animation:after:hover{
      transform: scaleX(0);
    }
    #burger{
      display: none;
    }
  }
</style>

<script src="../assets/js/burger.js"></script>
